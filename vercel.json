{
  "version": 2,
  "buildCommand": "echo 'No build needed'",
  "outputDirectory": ".",
  "functions": {
    "api/businessdev.js": {
      "includeFiles": "AI Tools/BusinessDev_NewUI/**"
    },
    "api/licenseremindertool.py": {
      "includeFiles": "AI Tools/LicenseReminderTool-main/**"
    },
    "api/cron.py": {
      "includeFiles": "AI Tools/LicenseReminderTool-main/**"
    }
  },
  "rewrites": [
    {
      "source": "/businessdev/(.*)",
      "destination": "/api/businessdev"
    },
    {
      "source": "/businessdev",
      "destination": "/api/businessdev"
    },
    {
      "source": "/licenseremindertool/api/cron/check-reminders",
      "destination": "/api/cron"
    },
    {
      "source": "/licenseremindertool/(.*)",
      "destination": "/api/licenseremindertool"
    },
    {
      "source": "/licenseremindertool",
      "destination": "/api/licenseremindertool"
    }
  ],
  "crons": [
    {
      "path": "/licenseremindertool/api/cron/check-reminders",
      "schedule": "0 9 * * *"
    }
  ]
}
